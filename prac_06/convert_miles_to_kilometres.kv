<Label>:
    color: (1, 0, 0, 1)
    canvas.before:
        Color:
            rgba: (0, 0, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<TextInput>
    background_color: (0, 1, 0, 1)


<Button>:
    background_color: (1, 0, 0, 1)
    background_down: ''
    color: (1, 1, 1, 1)
    canvas.after:
        Color:
            rgba: (0, 0, 0, 1)
        Line:
            rectangle: self.x + 1, self.y + 1, self.width - 1, self.height - 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: '34'
            id: input_name
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
